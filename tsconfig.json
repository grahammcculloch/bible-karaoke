{
  "extends": "./tsconfig.spec.json",
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": true,
    "outDir": "build",
    "noEmit": true,
    "useDefineForClassFields": true
  },
  "include": ["main/**/*", "typings"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.integration.ts"]
}
