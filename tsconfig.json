{
  "extends": "./tsconfig.spec.json",
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "outDir": "start",
    "noEmit": true
  },
  "include": ["public/*.ts", "public/**/*.ts", "typings"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.integration.ts"]
}
